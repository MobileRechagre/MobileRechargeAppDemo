<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/header" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10" >

            <EditText
                android:id="@+id/productCode"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:layout_weight="2.0"
                android:background="@drawable/edittext_selectorbg"
                android:hint="Product Code"
                android:maxLength="15"
                android:paddingLeft="@dimen/edittextpaddingLeft"
                />

            <EditText
                android:id="@+id/packCode"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:layout_marginTop="@dimen/edittextmargineTop"
                android:background="@drawable/edittext_selectorbg"
                android:hint="Pack Code"
                android:paddingLeft="@dimen/edittextpaddingLeft" />

            <EditText
                android:id="@+id/name"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:layout_marginTop="@dimen/edittextmargineTop"
                android:background="@drawable/edittext_selectorbg"
                android:hint="Name"
                android:paddingLeft="@dimen/edittextpaddingLeft" />

            <EditText
                android:id="@+id/custo_id"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:layout_marginTop="@dimen/edittextmargineTop"
                android:background="@drawable/edittext_selectorbg"
                android:hint="Customer Id"
                android:paddingLeft="@dimen/edittextpaddingLeft" />

            <EditText
                android:id="@+id/number"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:layout_marginTop="@dimen/edittextmargineTop"
                android:background="@drawable/edittext_selectorbg"
                android:hint="Mobile Number"
                android:paddingLeft="@dimen/edittextpaddingLeft" />

            <EditText
                android:id="@+id/address"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:layout_marginTop="@dimen/edittextmargineTop"
                android:background="@drawable/edittext_selectorbg"
                android:hint="Address"
                android:paddingLeft="@dimen/edittextpaddingLeft" />

            <include layout="@layout/buttonproceed" />
        </LinearLayout>
    </LinearLayout>

</ScrollView><!-- From: file:/C:/Users/SHASHANK/Desktop/app/src/main/res/layout/dth_booking.xml -->