        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="amount"
        android:textColor="@color/whitecolor"
        android:textSize="16dip"
        android:typeface="sans" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
