<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/headercolor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/applicationlogo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:text="Please enter login details"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17dp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/useridET"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:layout_marginBottom="5.0dip"
                android:background="@drawable/edittext_selectorbg"
                android:ems="10"
                android:hint="User ID"
                android:inputType="text"
                android:paddingLeft="5.0dip"
                android:singleLine="true"
                android:text="" />

            <EditText
                android:id="@+id/passET"
                android:layout_width="@dimen/edittextSizewidth"
                android:layout_height="@dimen/edittextSizeHeight"
                android:background="@drawable/edittext_selectorbg"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5.0dip"
                android:singleLine="true" 
                android:text=""/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp" >

                <Button
                    android:id="@+id/ok"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Login"
                    android:textColor="@color/whitecolor" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

